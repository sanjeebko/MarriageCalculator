        <Button Grid.Row="0" Grid.Column="1" Text="Btn 2" BackgroundColor="Green" />
        <Button Grid.Row="1" Grid.Column="0" Text="Btn 3" BackgroundColor="Black" />
        <Button Grid.Row="1" Grid.Column="1" Text="Btn 4" BackgroundColor="Blue" />
        <Button Grid.Row="2" Grid.Column="0" Text="Btn 5" BackgroundColor="SaddleBrown" />
        <Button Clicked="Rotate_Clicked" Grid.Row="2" Grid.Column="1" Text="Btn 6" BackgroundColor="Aquamarine" />
    </Grid>
